<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:padding="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player2_pic"
            android:src="@drawable/abc_btn_switch_to_on_mtrl_00001"
            android:layout_marginEnd="22dp"
            android:layout_alignTop="@+id/player1_pic"
            android:layout_alignEnd="@+id/player2" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="player2"
            android:id="@+id/player2"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/player2_score"
            android:layout_marginStart="18dp" />

        <TextView
            android:id="@+id/player1"
            android:text="player1"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/player2_score" />

        <TextView
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="VS"
            android:id="@+id/score"
            android:layout_alignBaseline="@+id/player1"
            android:layout_alignBottom="@+id/player1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textSize="25dp"
            android:textColor="#ff00ff00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="player2_比分"
            android:id="@+id/player2_score"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="29dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player1_pic"
            android:src="@drawable/abc_btn_switch_to_on_mtrl_00012"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/player1" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>
